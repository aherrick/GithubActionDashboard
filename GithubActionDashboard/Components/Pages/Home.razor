@page "/"
@using GithubActionDashboard.Services
@using GithubActionDashboard.Helpers
@using Octokit
@using Blazored.LocalStorage
@using Humanizer
@inject GitHubService GitHubService
@inject ILocalStorageService LocalStorage

<PageTitle>GitHub Actions Dashboard</PageTitle>

<div class="container mt-4">
    @if (!IsConnected)
    {
        <div class="mb-4">
            <div class="input-group">
                <span class="input-group-text">GitHub Token</span>
                <input type="password" class="form-control" @bind="Token" placeholder="Enter your Personal Access Token" />
                <button class="btn btn-primary" @onclick="Connect" disabled="@IsConnecting">
                    @if (IsConnecting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Connecting...</span>
                    }
                    else
                    {
                        <span>Connect</span>
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(StatusMessage))
        {
            <div class="alert alert-danger" role="alert">
                @StatusMessage
            </div>
        }
    }

    @if (IsConnected)
    {
        <div class="alert alert-success d-flex justify-content-between align-items-center py-2 mb-3" role="alert">
            <span>Connected to @RepoCount repos. <a href="#" @onclick="Reconnect" @onclick:preventDefault>Reconnect</a></span>
            <button class="btn btn-sm btn-outline-secondary" @onclick="ToggleRepoSelector">
                @(ShowRepoSelector ? "Hide Repos" : "Select Repos")
            </button>
        </div>

        @if (ShowRepoSelector)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5>Select Favorites</h5>
                    @if (AllRepos == null)
                    {
                        <p>Loading repositories...</p>
                    }
                    else
                    {
                        <div class="mb-2">
                            <input class="form-control form-control-sm" placeholder="Filter..." @bind="RepoFilter" @bind:event="oninput" />
                        </div>
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var repo in FilteredAllRepos)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" 
                                           checked="@FavoriteRepoIds.Contains(repo.Id)" 
                                           @onchange="@(e => ToggleFavorite(repo.Id, (bool)(e.Value ?? false)))" 
                                           id="repo-@repo.Id">
                                    <label class="form-check-label" for="repo-@repo.Id">
                                        @repo.FullName
                                    </label>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <ul class="nav nav-tabs mb-0">
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == 0 ? "active" : "")" href="#" @onclick="() => SwitchTab(0)" @onclick:preventDefault>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveTab == 1 ? "active" : "")" href="#" @onclick="() => SwitchTab(1)" @onclick:preventDefault>All Runs</a>
                </li>
            </ul>
            @if (ActiveTab == 0)
            {
                <button class="btn btn-sm btn-outline-primary" @onclick="RefreshAllRepos" disabled="@IsRefreshingRepos">
                    @if (IsRefreshingRepos)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Refreshing...</span>
                    }
                    else
                    {
                        <span>Refresh All</span>
                    }
                </button>
            }
            else
            {
                <button class="btn btn-sm btn-outline-secondary" @onclick="LoadAllRuns" disabled="@IsLoadingAllRuns">
                    @(IsLoadingAllRuns ? "Loading..." : "Refresh")
                </button>
            }
        </div>

        @if (ActiveTab == 0)
        {
            <div class="row">
                @foreach (var repo in FavoriteRepos)
                {
                    <div class="col-md-6 col-lg-4">
                        <RepoCard @ref="RepoCards[repo.Id]" Repo="repo" />
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Repo</th>
                            <th>Workflow</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>

                            @if (IsLoadingAllRuns)
                            {
                                <tr><td colspan="4">Loading runs across all favorite repositories...</td></tr>
                            }
                            else if (AllRuns == null || AllRuns.Count == 0)
                            {
                                <tr><td colspan="4">No runs loaded yet. Click Refresh to load runs.</td></tr>
                            }
                            else
                            {
                                @foreach (var run in AllRuns)
                                {
                                    <tr>
                                        <td>@run.Repository?.FullName</td>
                                        <td>@run.Name</td>
                                        <td>
                                            <span class="badge @WorkflowStatusHelper.GetStatusBadgeClass(run.Status, run.Conclusion)">
                                                @run.Status @(run.Conclusion.HasValue ? $"({run.Conclusion})" : "")
                                            </span>
                                        </td>
                                        <td>
                                            @if (run.Status.Value == WorkflowRunStatus.Completed && run.RunStartedAt != default && run.UpdatedAt > run.RunStartedAt)
                                            {
                                                var duration = run.UpdatedAt - run.RunStartedAt;
                                                <span>took @duration.Humanize(precision: 2), finished @run.UpdatedAt.Humanize()</span>
                                            }
                                            else if (run.RunStartedAt != default)
                                            {
                                                <span>started @run.RunStartedAt.Humanize()</span>
                                            }
                                            else
                                            {
                                                <span>updated @run.UpdatedAt.Humanize()</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    private string Token;
    private bool IsConnected = false;
    private bool IsConnecting = false;
    private bool ShowRepoSelector = false;
    private int ActiveTab = 0;
    private string RepoFilter = "";
    private string StatusMessage;
    private int RepoCount = 0;
    
    private List<Repository> FavoriteRepos = new();
    private IReadOnlyList<Repository> AllRepos;
    private HashSet<long> FavoriteRepoIds = new();
    private List<WorkflowRun> AllRuns;
    private bool IsLoadingAllRuns { get; set; }
    private bool IsRefreshingRepos { get; set; }
    private Dictionary<long, RepoCard> RepoCards = new();

    private IEnumerable<Repository> FilteredAllRepos =>
        (AllRepos ?? Array.Empty<Repository>())
            .Where(r => string.IsNullOrWhiteSpace(RepoFilter) || r.FullName.Contains(RepoFilter, StringComparison.OrdinalIgnoreCase))
            .OrderByDescending(r => FavoriteRepoIds.Contains(r.Id))
            .ThenBy(r => r.FullName);

    private void Reconnect()
    {
        IsConnected = false;
    }

    private async Task Connect()
    {
        IsConnecting = true;
        StatusMessage = null;
        IsConnected = false;

        if (string.IsNullOrWhiteSpace(Token))
        {
            StatusMessage = "Please enter a token.";
            IsConnecting = false;
            return;
        }

        try
        {
            GitHubService.Initialize(Token);

            // Simple connectivity test – try to read current user's repos
            var testRepos = await GitHubService.GetRepositoriesAsync();

            // Load favorites from local storage (best-effort)
            try
            {
                var storedIds = await LocalStorage.GetItemAsync<HashSet<long>>("favoriteRepoIds");
                if (storedIds != null && storedIds.Count > 0)
                {
                    FavoriteRepoIds = storedIds;
                    await LoadFavorites();
                }
            }
            catch
            {
                // Ignore local storage issues, but don't fail connect
            }

            IsConnected = true;
            RepoCount = testRepos.Count;
        }
        catch (AuthorizationException)
        {
            StatusMessage = "GitHub rejected the token. Check that it is valid and has the 'repo' and 'workflow' scopes.";
        }
        catch (Exception ex)
        {
            StatusMessage = $"Failed to connect: {ex.Message}";
        }
        finally
        {
            IsConnecting = false;
        }
    }

    private async Task ToggleRepoSelector()
    {
        ShowRepoSelector = !ShowRepoSelector;
        if (ShowRepoSelector && AllRepos == null)
        {
            AllRepos = await GitHubService.GetRepositoriesAsync();
        }
    }

    private async Task ToggleFavorite(long repoId, bool isFavorite)
    {
        if (isFavorite)
        {
            FavoriteRepoIds.Add(repoId);
            var repo = AllRepos?.FirstOrDefault(r => r.Id == repoId);
            if (repo != null)
            {
                FavoriteRepos.Add(repo);
            }
        }
        else
        {
            FavoriteRepoIds.Remove(repoId);
            FavoriteRepos.RemoveAll(r => r.Id == repoId);
        }
        
        await LocalStorage.SetItemAsync("favoriteRepoIds", FavoriteRepoIds);
    }

    private async Task RefreshAllRepos()
    {
        IsRefreshingRepos = true;

        try
        {
            await Task.WhenAll(RepoCards.Values.Select(card => card.LoadRuns()));
        }
        finally
        {
            IsRefreshingRepos = false;
        }
    }

    private async Task LoadFavorites()
    {
        FavoriteRepos.Clear();
        if (FavoriteRepoIds.Count == 0) return;

        var allRepos = await GitHubService.GetRepositoriesAsync();
        FavoriteRepos.AddRange(allRepos.Where(r => FavoriteRepoIds.Contains(r.Id)));
    }

    private async Task SwitchTab(int tabIndex)
    {
        ActiveTab = tabIndex;
        if (tabIndex == 1 && (AllRuns == null || AllRuns.Count == 0))
        {
            await LoadAllRuns();
        }
    }

    private async Task LoadAllRuns()
    {
        IsLoadingAllRuns = true;

        try
        {
            var cutoff = DateTimeOffset.UtcNow.AddDays(-7);
            var tasks = FavoriteRepos.Select(repo => LoadRunsForRepo(repo, cutoff));
            var results = await Task.WhenAll(tasks);

            AllRuns = results
                .SelectMany(r => r ?? Enumerable.Empty<WorkflowRun>())
                .OrderByDescending(r => r.UpdatedAt)
                .ToList();
        }
        finally
        {
            IsLoadingAllRuns = false;
        }
    }

    private async Task<IEnumerable<WorkflowRun>> LoadRunsForRepo(Repository repo, DateTimeOffset cutoff)
    {
        try
        {
            var allRuns = await GitHubService.GetAllWorkflowRunsForRepoAsync(repo.Id, perPage: 100);
            return allRuns?.WorkflowRuns?.Where(r => r.UpdatedAt >= cutoff) ?? Enumerable.Empty<WorkflowRun>();
        }
        catch
        {
            return Enumerable.Empty<WorkflowRun>();
        }
    }

}
