@using GithubActionDashboard.Services
@using GithubActionDashboard.Helpers
@using Octokit
@using Humanizer
@inject GitHubService GitHubService

<div class="card mb-4 shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="my-0">@Repo.Name</h5>
        <div>
            <button class="btn btn-sm btn-outline-secondary me-1" @onclick="Refresh" disabled="@IsRefreshing" title="Refresh">
                @if (IsRefreshing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise"></i>
                }
            </button>
            <a href="@Repo.HtmlUrl" target="_blank" class="btn btn-sm btn-outline-secondary" title="View on GitHub">
                <i class="bi bi-github"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Workflows == null)
        {
            <p>Loading workflows...</p>
        }
        else if (Workflows.Count == 0)
        {
            <p>No workflows found.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Workflow</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wf in Workflows)
                        {   
                            var run = LatestRuns.ContainsKey(wf.Id) ? LatestRuns[wf.Id] : null;
                            <tr>
                                <td>
                                    <a href="@($"{Repo.HtmlUrl}/actions/workflows/{System.IO.Path.GetFileName(wf.Path)}")" target="_blank" class="fw-bold text-decoration-none">
                                        @wf.Name
                                    </a>
                                </td>
                                <td>
                                    @if (run != null)
                                    {
                                        <a href="@run.HtmlUrl" target="_blank" class="text-decoration-none">
                                            <span class="badge @WorkflowStatusHelper.GetStatusBadgeClass(run.Status, run.Conclusion)">
                                                #@run.RunNumber @(run.Conclusion.HasValue ? run.Conclusion.ToString() : run.Status.ToString())
                                            </span>
                                        </a>
                                        <br />
                                        <small class="text-muted">
                                            @if (run.Status.Value == WorkflowRunStatus.Completed && run.RunStartedAt != default && run.UpdatedAt > run.RunStartedAt)
                                            {
                                                var duration = run.UpdatedAt - run.RunStartedAt;
                                                var durationString = duration.TotalHours >= 1 ? duration.ToString(@"hh\:mm\:ss") : duration.ToString(@"mm\:ss");
                                                <span>Run: @durationString</span><br />
                                                <span>@run.UpdatedAt.Humanize()</span>
                                            }
                                            else if (run.RunStartedAt != default)
                                            {
                                                @($"started {run.RunStartedAt.Humanize()}")
                                            }
                                            else
                                            {
                                                @($"updated {run.UpdatedAt.Humanize()}")
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No runs</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => TriggerWorkflow(wf)" disabled="@IsLoading(wf.Id)">
                                        @if (IsLoading(wf.Id))
                                        {
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        }
                                        else
                                        {
                                            <span>Run</span>
                                        }
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public Repository Repo { get; set; } = default!;

    private IReadOnlyList<Workflow> Workflows;
    private Dictionary<long, WorkflowRun> LatestRuns = new Dictionary<long, WorkflowRun>();
    private HashSet<long> LoadingWorkflows = new HashSet<long>();
    private bool IsRefreshing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadRuns();
    }

    private async Task Refresh()
    {
        IsRefreshing = true;
        try { await LoadRuns(); }
        finally { IsRefreshing = false; }
    }

    public async Task LoadRuns()
    {
        var response = await GitHubService.GetWorkflowsAsync(Repo.Id);
        Workflows = response.Workflows;

        if (Workflows == null || Workflows.Count == 0) return;

        var tasks = Workflows.Select(async wf =>
        {
            var run = await GitHubService.GetLatestWorkflowRunAsync(Repo.Id, wf.Id);
            return (wf.Id, run);
        });

        var results = await Task.WhenAll(tasks);
        
        LatestRuns = results
            .Where(r => r.run != null)
            .ToDictionary(r => r.Id, r => r.run);
    }

    private async Task TriggerWorkflow(Workflow wf)
    {
        LoadingWorkflows.Add(wf.Id);
        try
        {
            await GitHubService.TriggerWorkflowAsync(Repo.Id, wf.Id);
            await Task.Delay(2000);
            await LoadRuns();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error triggering workflow {wf.Name}: {ex.Message}");
        }
        finally
        {
            LoadingWorkflows.Remove(wf.Id);
        }
    }

    private bool IsLoading(long wfId) => LoadingWorkflows.Contains(wfId);
}
